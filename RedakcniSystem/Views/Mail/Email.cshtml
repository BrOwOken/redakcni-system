@model RedakcniSystem.Data.Models.MailModel
<html>
<head>
    <title>UwU</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body style="margin: 0; padding: 0;">
    <table role="presentation" border="0" cellpadding="0" width="100%" >
        <tr>
            <td style="padding: 20px 0 30px;">
                <table align="center" cellpadding="0" cellspacing="0" width="600" style="border-collapse: collapse; border: 1px solid #808080;">
                    <tr>
                        <td style="color: #333333; font-family: Arial, sans-serif;">
                            <h1 style="font-size: 24px; margin: 0;">@Model.Title</h1>
                        </td>
                    </tr>
                    <tr>
                        <td style="color: #333333; font-family: Arial, sans-serif; font-size: 16px; line-height: 24px; padding: 30px 0 20px 0">
                            <p style="margin: 0;">@Model.Text</p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>